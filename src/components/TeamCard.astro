---
interface Props {
  name: string;
  city: string;
  category: 'masculino' | 'femenino';
  index?: number;
  img?: string;
}

const { name, city, category, index = 0, img } = Astro.props;
const bgColor = category === 'masculino' ? 'from-masculino/10 to-masculino/5' : 'from-femenino/10 to-femenino/5';
const borderColor = category === 'masculino' ? 'border-masculino/20' : 'border-femenino/20';
const textColor = category === 'masculino' ? 'text-masculino' : 'text-femenino';
// fallback: coloca un placeholder en /public/images/placeholder-escudo.png
const placeholder = '/images/placeholder-escudo.png';
const src = img ?? placeholder;
const altText = `${name} ‚Äî escudo del equipo${city ? `, ${city}` : ''}`;
---

<div 
  class={`bg-gradient-to-br ${bgColor} border ${borderColor} rounded-2xl p-6 hover-lift hover:shadow-xl transition-all duration-300 hover:scale-105`}
  style={`animation-delay: ${index * 100}ms`}
>
  <div class="text-center space-y-3">
    <div class={`w-20 h-20 mx-auto bg-gradient-to-br ${category === 'masculino' ? 'from-masculino to-masculino/70' : 'from-femenino to-femenino/70'} rounded-full flex items-center justify-center text-2xl mb-4 shadow-lg overflow-hidden`}>
      <img src={src} alt={altText} loading="lazy" class="h-16 w-16 object-contain" />
    </div>
    
    <h3 class={`font-bold text-lg ${textColor}`}>{name}</h3>
    <p class="text-gray-600 font-medium">üìç{city}</p>

  </div>
</div>