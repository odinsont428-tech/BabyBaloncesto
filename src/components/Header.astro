---
const { pathname } = Astro.url;
---

<header class="bg-white shadow-lg sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center space-x-4">
        <a href="/" class="flex items-center space-x-3">
          <img src="https://res.cloudinary.com/dny2fuvgi/image/upload/v1763854337/logoBabybaloncesto_rhwin8.webp" alt="Logotipo de Baby Baloncesto — Nariño y Putumayo 2025" class="h-10 w-auto" loading="lazy">
          <div>
            <h1 class="font-bold text-xl text-dark-gray">Baby Baloncesto</h1>
            <p class="text-sm text-gray-600">Nariño y Putumayo 2025</p>
          </div>
        </a>
      </div>
      
      <div class="hidden md:flex items-center space-x-8">
        <a 
          href="/" 
          class={`font-medium transition-colors duration-200 ${pathname === '/' ? 'text-masculino' : 'text-gray-700 hover:text-masculino'}`}
        >
          Inicio
        </a>
        <a 
          href="/masculino" 
          class={`font-medium transition-colors duration-200 ${pathname.includes('/masculino') ? 'text-masculino' : 'text-gray-700 hover:text-masculino'}`}
        >
          Masculino
        </a>
        <a 
          href="/femenino" 
          class={`font-medium transition-colors duration-200 ${pathname.includes('/femenino') ? 'text-femenino' : 'text-gray-700 hover:text-femenino'}`}
        >
          Femenino
        </a>
        <a 
          href="/agradecimientos" 
          class={`font-medium transition-colors duration-200 ${pathname === '/agradecimientos' ? 'text-masculino' : 'text-gray-700 hover:text-masculino'}`}
        >
          Agradecimientos
        </a>
      </div>

      <!-- Mobile menu button -->
      <button class="md:hidden p-2" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-light-gray rounded-lg">
        <a href="/" class="block px-3 py-2 text-base font-medium text-dark-gray hover:text-masculino">Inicio</a>
        <a href="/masculino" class="block px-3 py-2 text-base font-medium text-dark-gray hover:text-masculino">Masculino</a>
        <a href="/femenino" class="block px-3 py-2 text-base font-medium text-dark-gray hover:text-femenino">Femenino</a>
        <a href="/agradecimientos" class="block px-3 py-2 text-base font-medium text-dark-gray hover:text-masculino">Agradecimientos</a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>